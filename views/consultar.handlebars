<div class="container w-75">
    <nav class="navbar navbar-expand-lg bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">SISTEMA WEB</a>
            <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-white"
                            aria-current="page"
                            href="/cadastrar">Cadastrar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white-50"
                            href="/consultar">Consultar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-sm gap-3">
        <p class="display-6">Consultar - Agendamento de Potenciais Clientes</p>
        <p>Cadastrar Agendamento de potenciais clientes</p>
    </div>
    <div class="table-responsive container w-70">
        <table class="table table-sm">
            <thead>
                <tr>
                    <td class="bg-primary text-white text-center" scope="col">Nome</td>
                    <td class="bg-primary text-white text-center" scope="col">Telefone</td>
                    <td class="bg-primary text-white text-center" scope="col">Origem</td>
                    <td class="bg-primary text-white text-center" scope="col">Data de Contato</td>
                    <td class="bg-primary text-white text-center" scope="col">Observação</td>
                    <td class="bg-primary text-white text-center" scope="col"></td>
                    <td class="bg-primary text-white text-center" scope="col"></td>
                </tr>
            </thead> 
            <tbody>
                {{#each post}}
                    {{#dataValues}} 
                        <tr>
                            <td class="text-center">{{nome}}</td>
                            <td class="text-center">{{telefone}}</td>
                            <td class="text-center">{{origem}}</td>
                            <td class="text-center">{{data_contato}}</td>
                            <td class="text-center">{{observacao}}</td>
                            <td><a type="button" class="btn btn-warning" href="/editar/{{id}}">Editar</a></td>
                            <td><a type="reset" class="btn btn-danger" href="/excluir/{{id}}">Excluir</a></td>
                        </tr>
                    {{/dataValues}}
                {{/each}}    
            </tbody>      
        </table>
    </div>
</div>